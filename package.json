{
    "name": "zender-frontend",
    "version": "0.1.0",
    "description": "Le frontend de l'application",
    "main": "index.js",
    "scripts": {
        "start": "tauri dev",
        "start:ui": "vite",
        "build": "tauri build",
        "build:ui": "vite build",
        "test:unit": "npx vitest -r src-mithril/component",
        "test:view": "npx vitest -r src-mithril/view",
        "test:integration": "cypress run",
        "format": "prettier '**/*.{js,jsx}' --write",
        "lint": "eslint '**/*.{js,jsx}' --fix",
        "gen":"cargo r --bin dgen --manifest-path src-tauri/Cargo.toml && npx json2ts -i src-tauri/schemas -o types/"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@faker-js/faker": "^7.4.0",
        "@tauri-apps/cli": "^1.0.0",
        "@types/mithril": "^2.0.11",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.4",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.30.1",
        "jsdom": "^20.0.0",
        "mithril-query": "^4.0.1",
        "prettier": "2.7.1",
        "sass": "^1.53.0",
        "vite": "^2.9.9",
        "vite-plugin-eslint": "^1.6.1",
        "vitest": "^0.17.0"
    },
    "dependencies": {
        "@tauri-apps/api": "^1.0.1",
        "construct-ui": "^0.3.3",
        "json-schema-to-typescript": "^11.0.2",
        "mithril": "^2.2.2",
        "ospec": "^4.1.6"
    }
